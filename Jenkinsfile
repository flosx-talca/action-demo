pipeline {
    agent any

    stages {
        stage('Verificar estructura') {
            steps {
                echo 'ðŸ“‚ Explorando estructura completa del workspace'
                sh 'find . -type f'
            }
        }

        stage('Instalar dependencias') {
            steps {
                echo 'ðŸ“¦ Ejecutando npm ci en la carpeta app/'
                sh '''
                    docker run --rm \
                        -v "$WORKSPACE:/app" \
                        -w /app/app \
                        node:18 \
                        bash -c "npm ci"
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'ðŸ§ª Ejecutando pruebas'
                sh '''
                    docker run --rm \
                        -v "$WORKSPACE:/app" \
                        -w /app/app \
                        node:18 \
                        bash -c "npm test"
                '''
            }
        }
    }
}
